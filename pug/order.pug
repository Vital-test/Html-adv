mixin order

  include btn

  -var it_type = [{id:'access',lab:'Аксессуар для интерьера'},{id:'toy',lab:'Детская игрушка'}];

  -var it_color = [{id:'white',lab:'Белый'},{id:'grey',lab:'Серый'},{id:'tiffany',lab:'&laquo;Тиффани&raquo;'},{id:'black',lab:'Черный'},{id:'pink',lab:'Розовый'},{id:'orange',lab:'Оранжевый'}];

  -var it_client = [{id:'surname',lab:'Фамилия:', phdr:'Укажите фамилию'},{id:'name',lab:'Имя:', phdr:'Введите ваше имя'},{id:'patron',lab:'Отчество:', phdr:'Отчество, если желаете'}];

  -var it_contacts = [{sp:'Тел',type:'text',src:'#',phdr:'+7 XXX XX XX'},{sp:'E-mail',type:'email',src:'#',phdr:'Ваш e-mail'}];

